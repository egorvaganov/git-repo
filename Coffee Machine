class Coffee:
    def __init__(self, water, milk, coffee_beans, disposable_cups, money):
        self.water = water
        self.milk = milk
        self.coffee_beans = coffee_beans
        self.disposable_cups = disposable_cups
        self.money = money
        self.state = input('Write action (buy, fill, take, remaining, exit): \n')
        if self.state == 'remaining':
            self.remaining()
        elif self.state == 'fill':
            self.fill()
        elif self.state == 'take':
            self.take()
        elif self.state == 'buy':
            self.buy()
        elif self.state == 'exit':
            exit()
        else:
            Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)

    def remaining(self):
        print('\nThe coffee machine has:')
        print(f'{self.water} of water')
        print(f'{self.milk} of milk')
        print(f'{self.coffee_beans} of coffee beans')
        print(f'{self.disposable_cups} of disposable cups')
        print(f'{self.money} of money \n')
        return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)

    def fill(self):
        print('Write how many ml of water do you want to add:')
        self.water += int(input())
        print('Write how many ml of milk do you want to add:')
        self.milk += int(input())
        print('Write how many grams of coffee beans do you want to add:')
        self.coffee_beans += int(input())
        print('Write how many disposable cups of coffee do you want to add:')
        self.disposable_cups += int(input())
        print()
        return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)

    def take(self):
        print(f'I gave you ${self.money} \n')
        self.money -= self.money
        return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)

    def buy(self):
        print('What do you want to buy? 1 - espresso, 2 - latte, 3 - cappuccino:')
        choice = input()
        if choice == '1':
            if self.water >= 250 and self.coffee_beans >= 16 and self.disposable_cups >= 1:
                self.water -= 250
                self.coffee_beans -= 16
                self.disposable_cups -= 1
                self.money += 4
                print('I have enough resources, making you a coffee! \n')
            elif self.water < 250:
                print('Sorry, not enough water! \n')
            elif self.coffee_beans < 16:
                print('Sorry, not enough coffee_beans! \n')
            elif self.disposable_cups < 1:
                print('Sorry, not enough disposable_cups! \n')
            return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)
        if choice == '2':
            if self.water >= 350 and self.milk >= 75 and self.coffee_beans >= 20 and self.disposable_cups >= 1:
                self.water -= 350
                self.milk -= 75
                self.coffee_beans -= 20
                self.disposable_cups -= 1
                self.money += 7
                print('I have enough resources, making you a coffee! \n')
            elif self.water < 350:
                print('Sorry, not enough water! \n')
            elif self.milk < 75:
                print('Sorry, not enough milk! \n')
            elif self.coffee_beans < 20:
                print('Sorry, not enough coffee_beans! \n')
            elif self.disposable_cups < 1:
                print('Sorry, not enough disposable_cups! \n')
            return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)
        if choice == '3':
            if self.water >= 200 and self.milk >= 100 and self.coffee_beans >= 12 and self.disposable_cups >= 1:
                self.water -= 200
                self.milk -= 100
                self.coffee_beans -= 12
                self.disposable_cups -= 1
                self.money += 6
                print('I have enough resources, making you a coffee! \n')
            elif self.water < 350:
                print('Sorry, not enough water! \n')
            elif self.milk < 75:
                print('Sorry, not enough milk! \n')
            elif self.coffee_beans < 20:
                print('Sorry, not enough coffee_beans! \n')
            elif self.disposable_cups < 1:
                print('Sorry, not enough disposable_cups! \n')
            return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)
        elif choice == 'back':
            return Coffee(self.water, self.milk, self.coffee_beans, self.disposable_cups, self.money)


coffee_machine = Coffee(400, 540, 120, 9, 550)
